<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

  <!-- Common for all components. -->
  <context-param>
    <description>The guice module for service component dependencies.</description>
    <param-name>ServiceGuiceModule</param-name>
    <param-value>...</param-value>
  </context-param>
  
  <!-- Servlet for the Register component. -->
  <servlet>
    <servlet-name>RegisterComponent</servlet-name>
        <servlet-class>twisty.server.components.register.RegisterServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterComponent</servlet-name>
        <url-pattern>rpc/components/Register</url-pattern>
    </servlet-mapping>
</web-app>
